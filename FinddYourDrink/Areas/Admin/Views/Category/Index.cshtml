
@{
    ViewData["Title"] = "Index";}




<div class ="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class ="text-primary">CAtegory List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle-dotted"></i>Create New Category
            </a>
        </div>
    </div>
</div>
<table class ="table table-bordered table-striped" style="width:100%">
    <thead> <!-- header-->
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Dispaly Order
            </th>
            <th>
                Date Time
            </th>
            <th>
                Edit
            </th>

        </tr>
        

    </thead>
    <tbody><!-- body-->
        @foreach(var obj in Model)
        {
            <tr>
                <td width="25%">
                    @obj.Name
                </td>
                <td width="25%">
                    @obj.DisplayOrder
                </td>
                <td width="25%">
                    @obj.CreatedDateTime
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" 
                        class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>   
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" 
                        class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Delete</a> 
                    </div>                    

                </td>
            </tr>
        }
    </tbody>
</table>

