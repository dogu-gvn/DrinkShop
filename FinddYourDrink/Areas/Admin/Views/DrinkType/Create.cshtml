@model DrinkType

<form method ="post">
    <div class = "border p-3 mt-4" >
        <div class ="row pb-2">
            <h2 class="text-primary">Create DrinkType</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>@*send error messages to the top*@
        <div class ="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" style ="width:25%" >@*for inpu text box*@
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>    
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-controller="DrinkType" asp-action="Index" class="btn btn-secondary" style ="width:150px">Back to List</a>
    </div>

</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/> // whit this all the validations happens in the clinet side
    }
    
}

